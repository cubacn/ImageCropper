<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="cubacn.cmp.crop.web.screens.imgcrop">
    <dialogMode forceDialog="true" width="400" height="220"/>
    <layout>
        <vbox spacing="true" height="100%">
            <buttonsPanel align="TOP_LEFT">
                <label id="qualityFieldLabel" value="msg://quality" align="MIDDLE_LEFT">msg://quality</label>
                <lookupField id="qualityField" width="100px" align="MIDDLE_LEFT" />
            </buttonsPanel>
            <buttonsPanel align="TOP_LEFT">
                <label id="viewportFieldLabel" value="msg://viewport" align="MIDDLE_LEFT">msg://viewport</label>
                <lookupField id="viewportField" width="100px" align="MIDDLE_LEFT" editable="false"/>
            </buttonsPanel>
            <buttonsPanel align="TOP_LEFT">
                <label id="dimensionFieldLabel" value="msg://dimension" align="MIDDLE_LEFT">msg://viewport</label>
                <textField id="widthField" width="100px" align="MIDDLE_LEFT" datatype="int" editable="false"/>
                <label align="MIDDLE_LEFT" value="X" />
                <textField id="heightField" width="100px" align="MIDDLE_LEFT" datatype="int" editable="false"/>
            </buttonsPanel>
            <buttonsPanel align="BOTTOM_RIGHT">
                <button id="okBtn" caption="msg://okText" stylename="primary"/>
                <button id="cancelBtn" caption="msg://cancelText"/>
            </buttonsPanel>
        </vbox>
    </layout>
</window>
