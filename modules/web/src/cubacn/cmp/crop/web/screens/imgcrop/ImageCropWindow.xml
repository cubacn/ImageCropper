<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="cubacn.cmp.crop.web.screens.imgcrop">
    <dialogMode width="800px" height="400px" forceDialog="true" resizable="true"/>
    <layout expand="rootCtn">
        <vbox id="rootCtn" spacing="true" expand="images">
            <hbox id="images" width="100%" margin="true" spacing="true">
                <vbox id="cropCmpCtn" spacing="true" width="100%" height="100%"/>
            </hbox>
            <groupBox spacing="true" outerMargin="true" caption="msg://settingsText" width="100%">
                <form width="100%">
                    <column>
                        <lookupField id="viewportField" caption="msg://viewport" width="80px" editable="false"
                        />
                    </column>
                    <column>
                        <buttonsPanel>
                            <label value="msg://dimension" align="MIDDLE_CENTER"/>
                            <textField id="widthField" width="60px" align="MIDDLE_CENTER"
                                       datatype="int" editable="false"/>
                            <label value="x" align="MIDDLE_CENTER"/>
                            <textField id="heightField" width="60px" align="MIDDLE_CENTER"
                                       datatype="int" editable="false"/>
                        </buttonsPanel>
                    </column>
                    <column>
                        <lookupField id="qualityField" width="80px" align="MIDDLE_LEFT" caption="msg://quality"
                        />
                    </column>
                </form>
            </groupBox>
        </vbox>
        <buttonsPanel id="toolbar" align="MIDDLE_RIGHT">
            <button caption="msg://okText" id="okBtn" align="MIDDLE_CENTER" stylename="primary"/>
            <button caption="msg://cancelText" id="cancelBtn" align="MIDDLE_CENTER"/>
        </buttonsPanel>
    </layout>
</window>
